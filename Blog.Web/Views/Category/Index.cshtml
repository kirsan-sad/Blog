@model IEnumerable<Blog.Domain.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Index">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Index">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Index">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
